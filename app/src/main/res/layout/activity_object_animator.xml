<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_object_animator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bo.anim.ui.ObjectAnimatorActivity">
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:text="CharEvaluator"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:text="customPoint"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <com.bo.anim.custom.MyPointView1
        android:id="@+id/pointview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_below="@+id/pointview"
        android:layout_width="wrap_content"
        android:text="ofPropertyValuesHolder"
        android:id="@+id/btn3"
        android:layout_height="wrap_content" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pointview"
        android:layout_width="wrap_content"
        android:text="ofObject"
        android:id="@+id/btn4"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv1"
        android:layout_below="@+id/btn3"
        android:padding="20dp"
        android:text="hello shixin"
        android:layout_height="wrap_content" />

    <com.bo.anim.custom.MyTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn3"
        android:text="hello shixin"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:text="keyframe"
        android:layout_below="@+id/tv1"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/img"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
